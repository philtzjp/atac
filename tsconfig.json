{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["ES2022"],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@core/*": ["src/core/*"],
            "@events/*": ["src/events/*"],
            "@plugins/*": ["src/plugins/*"],
            "@services/*": ["src/services/*"],
            "@types/*": ["src/types/*"],
            "@utils/*": ["src/utils/*"],
            "@config/*": ["src/config/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "tests"]
}
