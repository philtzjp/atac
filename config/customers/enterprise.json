            "feature_id": "chat",
            "config": {
                "command_name": "question",
                "model": "claude-3-sonnet",
                "use_rag": true,
                "rag_top_k": 5,
                "system_prompt": "You are an enterprise assistant with access to company knowledge."
            }
        },
        {
            "event_type": "mention",
            "feature_id": "chat",
            "config": {
                "model": "claude-3-sonnet",
                "use_rag": true,
                "cache_ttl_seconds": 600
            }
        },
        {
            "event_type": "slash",
            "feature_id": "attendance",
            "config": {
                "command_name": "attendance",
                "collection_name": "enterprise_attendance"
